@model EstoqueAtalaia.ViewModel.OrdemDeServicoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrdemDeServico</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameCliente" class="control-label"></label>
                <input asp-for="NameCliente" class="form-control" />
                <span asp-validation-for="NameCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailCliente" class="control-label"></label>
                <input asp-for="EmailCliente" class="form-control" />
                <span asp-validation-for="EmailCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneCliente" class="control-label"></label>
                <input asp-for="TelefoneCliente" class="form-control" />
                <span asp-validation-for="TelefoneCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aparelho" class="control-label"></label>
                <input asp-for="Aparelho" class="form-control" />
                <span asp-validation-for="Aparelho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IMEI" class="control-label"></label>
                <input asp-for="IMEI" class="form-control" />
                <span asp-validation-for="IMEI" class="text-danger"></span>
            </div>

            <div class="row">
                @foreach (var check in Model.checks)
                {
                    <div class="col-md-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="check[]" value="@check" id="defaultCheck1">
                            <label class="form-check-label" for="defaultCheck1">
                                @check
                            </label>
                        </div>
                        <br />
                    </div>

                }


            </div>

            <div class="form-group">
                <label asp-for="Detalhes" class="control-label"></label>
                <input asp-for="Detalhes" class="form-control" />
                <span asp-validation-for="Detalhes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reclamacao" class="control-label"></label>
                <input asp-for="Reclamacao" class="form-control" />
                <span asp-validation-for="Reclamacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <input asp-for="Diagnostico" class="form-control" />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Garantia" class="control-label"></label>
                <input asp-for="Garantia" class="form-control" />
                <span asp-validation-for="Garantia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorServico" class="control-label"></label>
                <input asp-for="ValorServico" class="form-control" />
                <span asp-validation-for="ValorServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorPeca" class="control-label"></label>
                <input asp-for="ValorPeca" class="form-control" />
                <span asp-validation-for="ValorPeca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sinal" class="control-label"></label>
                <input asp-for="Sinal" class="form-control" />
                <span asp-validation-for="Sinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resta" class="control-label"></label>
                <input asp-for="Resta" class="form-control" />
                <span asp-validation-for="Resta" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar para a Lista</a>
</div>
